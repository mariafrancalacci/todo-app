{
  "compilerOptions": {
    "types": [
      "node",
      "chai",
      "jest",
      "vite/client"
    ],
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ]
}